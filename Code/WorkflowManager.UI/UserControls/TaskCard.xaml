<UserControl x:Class="WorkflowManager.UI.UserControls.TaskCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="150" Width="300">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
        <StackPanel>
            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
            <TextBlock Text="{Binding Description}" />
            <TextBlock Text="截止时间: " FontWeight="Bold" />
            <TextBlock Text="{Binding Deadline}" />
            <TextBlock Text="紧急度: " FontWeight="Bold" />
            <TextBlock Text="{Binding Urgency}" />
            <TextBlock Text="类型: " FontWeight="Bold" />
            <TextBlock Text="{Binding Type}" />
            <TextBlock Text="状态: " FontWeight="Bold" />
            <TextBlock Text="{Binding Status}" />
        </StackPanel>
    </Border>
</UserControl>
